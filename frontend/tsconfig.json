{
  "include": ["src", "tests"],
  "compilerOptions": {
    "lib": ["ES5", "ES6", "ESNext", "DOM"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  }
}
