{
  "include": ["src", "tests"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom"],
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  }
}
