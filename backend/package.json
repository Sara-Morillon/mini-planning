{
  "name": "mini-planning",
  "version": "1.0.8",
  "license": "MIT",
  "author": {
    "name": "Sara Morillon"
  },
  "scripts": {
    "build": "ttsc -b tsconfig.build.json",
    "start": "node dist/src/index.js",
    "start:dev": "nodemon -r dotenv/config --inspect=9999 src/index.ts",
    "test": "jest --runInBand",
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "docker:build": "docker build -t saramorillon/mini-planning -f ../Dockerfile ..",
    "docker:tag": "docker image tag saramorillon/mini-planning saramorillon/mini-planning:$npm_package_version",
    "docker:push": "docker push -a saramorillon/mini-planning"
  },
  "dependencies": {
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "helmet": "^4.3.1",
    "socket.io": "^4.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@jest-mock/express": "^1.4.1",
    "@mini-utils/eslint-config-typescript": "^1.0.4",
    "@types/express": "^4.17.9",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@types/socket.io": "^2.1.13",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.23.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.3",
    "jest": "^26.6.3",
    "mockdate": "^3.0.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.3",
    "typescript-transform-paths": "^2.2.3"
  }
}
